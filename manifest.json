{
  "name": "parallelmodbus",
  "description": "Parallel Modbus plugin (TCP, RTU, RTU over TCP)",
  "single": 0,
  "restartOnChannelsChange": 0,

  "innerId":1,
  "hasTryStartState":1,
  "linkChstatus":1,
  
  "share_node_folder_fields":["r","nodeip", "nodeport", "nodetransport", "parentoffset", "unitid"],

  "validator": {
    "main": {
      "host":{"IPv4": true},
      "maxreadlen": { "min": 1, "max":125 },
      "maxbitreadlen": { "min": 1, "max":2000 },
      "port":{"notempty": true}
    }
  },
  
  "channel_folder_popup": {
    "add": [
      { "id": "channel_folder", "title": "$NewFolder" },
      { "id": "channel_node_folder", "title": "$NewNode" },
      { "id": "channel", "title": "$Channel" }
    ],
    "copypaste": true,
    "delete": true
  },

  "channel_popup": {
    "add": [{ "id": "channel", "title": "$Channel" }],
    "copypaste": true,
    "delete": true
  },


  "default_channel_node_folder": {
    "r":1,
    "foldertype": "node",
    "nodeip": "192.168.0.245",
    "nodeport": 502,
    "nodetransport": "tcp",
    "parentoffset": 0,
    "chan": "$NewNode",
    "unitid":1
  },

  "default_channel": {
    "chan": "ch1",
    "r":1,
    "desc": "ch1",
    "vartype": "int16",
    "wvartype": "int16",
    "fcr":3,
    "address": "0",
    "offset": 0,
    "gr": true,
    "usek": false,
    "ks0": 0,
    "ks": 100,
    "kh0": 0,
    "kh": 100
  }
}
